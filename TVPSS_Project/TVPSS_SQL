-- school table
CREATE TABLE school (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    district VARCHAR(255) NOT NULL
);

INSERT INTO school (name, district) VALUES
    ('SMK Dato Jaafar', 'Johor Bahru'),
